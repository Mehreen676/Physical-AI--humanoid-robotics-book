# FastAPI Configuration
DEBUG=True
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# OpenAI Configuration (use .env.example as template; add your key here)
OPENAI_API_KEY=sk-test-key-placeholder-add-yours-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_LLM_MODEL=gpt-4o
OPENAI_LLM_FALLBACK_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=500

# Qdrant Configuration (use .env.example as template; add your credentials here)
QDRANT_URL=https://your-cluster-url.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION_NAME=book_v1.0_chapters

# Neon Postgres Configuration (use .env.example as template; add your connection string here)
DATABASE_URL=postgresql://user:password@host:5432/database

# Chat Configuration
RATE_LIMIT_QUERIES_PER_MINUTE=10
SESSION_TIMEOUT_HOURS=24
MAX_SELECTED_TEXT_TOKENS=2000
MAX_SELECTED_TEXT_CHARACTERS=10000

# CORS Configuration
ALLOWED_ORIGINS_STR=http://localhost:3000,http://localhost:8000,http://localhost:5173

# Logging
LOG_LEVEL=INFO