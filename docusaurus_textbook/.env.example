# RAG Chatbot Frontend Configuration
# Copy this file to .env.local or .env and set your values

# Backend API URL for RAG chatbot
# Development: http://localhost:8000
# Production: https://your-backend-domain.com
RAG_API_URL=http://localhost:8000

# Enable/disable RAG Chatbot feature
# Set to 'true' to enable the new RagChatbot component
# Set to 'false' to use legacy ChatWidget component
REACT_APP_RAG_CHATBOT_ENABLED=true

# Optional: Override backend port for development
# NODE_PORT=3000
